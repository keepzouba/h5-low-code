{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "api/*": [
        "api/*"
      ],
      "components/*": [
        "components/*"
      ],
      "plugins/*": [
        "plugins/*"
      ],
      "config/*": [
        "config/*"
      ],
      "constants/*": [
        "constants/*"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "layout/*": [
        "layout/*"
      ],
      "theme/*": [
        "theme/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "views/*": [
        "views/*"
      ]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
